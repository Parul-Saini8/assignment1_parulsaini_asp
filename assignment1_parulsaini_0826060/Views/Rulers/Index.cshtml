@model ImperialRulers.Models.RulerTypesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>List Of Rulers</h1>

<p>
    <a asp-action="Create">Add new item</a>
</p>
<form asp-controller="Rulers" asp-action="Index" method="get">
    <p>

        <select asp-for="RulerTypes" asp-items="Model.Types">
            <option value="">All</option>
        </select>


        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].ManufactureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Types)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rulers[0].Rating)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rulers)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Types)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>